{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=frozen_billing;Username=${DB_USER};Password=${DB_PASS}"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET}",
    "Issuer": "HexaBill.Api",
    "Audience": "HexaBill.Api",
    "ExpiryInHours": 8
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:5173",
    "http://127.0.0.1:3000",
    "http://127.0.0.1:5173"
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}


