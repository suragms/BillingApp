{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=frozen_billing.db"
  },
  "BackupSettings": {
    "AutoBackup": {
      "Enabled": true,
      "Time": "23:59",
      "ExportToDesktop": true,
      "UploadToCloud": false
    },
    "GoogleDrive": {
      "Enabled": false,
      "ClientId": "your-google-client-id.apps.googleusercontent.com",
      "ClientSecret": "your-google-client-secret",
      "RefreshToken": "your-refresh-token",
      "FolderId": "your-folder-id-or-null-for-root"
    },
    "AWS": {
      "Enabled": false,
      "AccessKeyId": "your-aws-access-key",
      "SecretAccessKey": "your-aws-secret-key",
      "Region": "us-east-1",
      "BucketName": "starplus-backups",
      "Prefix": "production/"
    },
    "Azure": {
      "Enabled": false,
      "ConnectionString": "DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net",
      "ContainerName": "backups"
    },
    "Email": {
      "Enabled": false,
      "SmtpServer": "smtp.gmail.com",
      "SmtpPort": 587,
      "UseSsl": true,
      "Username": "your-email@gmail.com",
      "Password": "your-app-password",
      "ToEmail": "admin@starplus.com",
      "Subject": "StarPlus Backup Completed"
    },
    "Retention": {
      "KeepLocalDays": 30,
      "KeepCloudDays": 90,
      "KeepMonthlyDays": 365,
      "AutoDelete": true
    }
  }
}

